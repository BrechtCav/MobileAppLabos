<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".StopAfstandActivity$PlaceholderFragment"
    android:id="@+id/Stop">

    <TextView android:text="Selecteer uw snelheid:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txbsnelheid" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtsnelheid"
        android:layout_below="@+id/txbsnelheid"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtreactie"
        android:layout_below="@+id/txbreactie"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Selecteer uw reactietijd:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txbreactie"
        android:layout_below="@+id/txtsnelheid"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Selecteer het wegtype:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txbweg"
        android:layout_below="@+id/txtreactie"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txbweg"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/rbtgroupweg">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Het wegdek ligt droog"
            android:id="@+id/rbtdroog"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Het wegdek ligt nat"
            android:id="@+id/rbtnat"
            android:checked="false" />

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BEREKEN DE STOPAFSTAND"
        android:id="@+id/btnbereken"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="De stopafstand is:"
        android:id="@+id/txbresult"
        android:layout_below="@+id/btnbereken"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtresult"
        android:layout_below="@+id/txbresult"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
