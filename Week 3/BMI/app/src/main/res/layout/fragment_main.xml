<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtheight"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Your height" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtmass"
        android:hint="Your mass"
        android:layout_below="@+id/txtheight"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        android:id="@+id/btnUpdate"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/txtmass"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="YOUR BMI INFO"
        android:id="@+id/txbinfo"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/btnUpdate"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgsil"
        android:layout_marginTop="26dp"
        android:src="@drawable/silhouette_1"
        android:layout_below="@+id/txbinfo"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Index:"
        android:id="@+id/txbindex"
        android:layout_marginTop="29dp"
        android:layout_alignTop="@+id/imgsil"
        android:layout_alignEnd="@+id/txbinfo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtindex"
        android:layout_alignBottom="@+id/txbindex"
        android:layout_toEndOf="@+id/txbindex"
        android:layout_marginStart="35dp"
        android:text="enter your info first" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Category"
        android:id="@+id/txbcat"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/txbindex"
        android:layout_alignStart="@+id/txbindex" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="enter your info first"
        android:id="@+id/txtcat"
        android:layout_alignBottom="@+id/txbcat"
        android:layout_alignStart="@+id/txtindex" />


</RelativeLayout>
